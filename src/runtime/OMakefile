RUNTIME_MODULES =     \
  farPointer          \
  listPointer         \
  message             \
  messageStorage      \
  pointer             \
  runtime             \
  runtimeBuilder      \
  runtimeCommon       \
  runtimeReader       \
  strStorage          \
  structPointer       \
  util

OCamlPackage(capnp, $(RUNTIME_MODULES))
OCAMLFLAGS += -for-pack Capnp

.PHONY: runtime-clean runtime-distclean

runtime-clean:
	rm -f *.cmi *.cmo *.cma *.cmx *.cmxa *.a *.o

runtime-distclean: runtime-clean
	rm -f *.omc

