
RUNTIME_MODULES =   \
  builder           \
  cArray            \
  common            \
  farPointer        \
  innerArray        \
  listPointer       \
  message           \
  messageStorage    \
  pointer           \
  reader            \
  strStorage        \
  structPointer     \
  util

OCamlPackage(capnpRuntime, $(RUNTIME_MODULES))
OCAMLFLAGS += -for-pack CapnpRuntime

.PHONY: runtime-clean runtime-distclean

runtime-clean:
	rm -f *.cmi *.cmo *.cma *.cmx *.cmxa *.a *.o

runtime-distclean: runtime-clean
	rm -f *.omc

